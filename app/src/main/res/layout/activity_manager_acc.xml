<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:id="@+id/add_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/adView">
        <EditText
            android:id="@+id/type_acc_add"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/stroke4_blue"
            android:layout_marginRight="10dp"
            android:entries="@array/add_acc"></EditText>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border4_blue"
            android:text="@string/add"
            android:textColor="@color/color_white"
            android:textAllCaps="false"/>
    </LinearLayout>
    <ListView
        android:layout_above="@id/add_bottom"
        android:id="@+id/list_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        >
    </ListView>

</RelativeLayout>
